<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:k="http://schemas.microsoft.com/kinect/2014"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Microsoft.Samples.Kinect.ControlsBasics"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:System="clr-namespace:System;assembly=mscorlib" 
        x:Class="Microsoft.Samples.Kinect.ControlsBasics.MainWindow"
        xmlns:helpSlide="clr-namespace:Microsoft.Samples.Kinect.ControlsBasics.Pages"
        x:Name="KinectBoardWindow"
        Title="Kinect Display Board"
        mc:Ignorable="d"
        d:DesignWidth="1200"
        d:DesignHeight="700"
        MinWidth="500"
        MinHeight="700"
        WindowState="Maximized"
        WindowStyle="None"
        GotTouchCapture="KinectBoardWindow_GotTouchCapture"
        TouchDown="KinectBoardWindow_GotTouchCapture"
        MouseDown="KinectBoardWindow_MouseDown">
    

    <k:KinectRegion x:Name="kinectRegion">
        <Grid>
            <Grid.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF292929"/>
                    <GradientStop Color="#FF020202" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="100*" />
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid x:Name="topBar" Grid.Row="0" Margin="0,0,0,7" Background="Black">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*"/>
                    
                </Grid.ColumnDefinitions>

                <Button x:Name="backButton" Visibility="Collapsed" Grid.Column="0" Style="{StaticResource BackButtonStyle}" Click="GoBack" />
                <Button x:Name="helpButton" Visibility="Visible" Grid.Column="0"  Click="helpButton_Click" Background="{x:Null}"  Style="{StaticResource HelpButtonStyle}"/>


                <Grid Grid.Row="0" Grid.Column="1" >

                    <Grid.RowDefinitions>
                        <RowDefinition Height="0.2*"/>
                        <RowDefinition Height="0.3*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Image x:Name="image" MouseDown="DateTimeClock_MouseDown" Grid.Row="0" Grid.Column="0" Source="Images/clas.png" HorizontalAlignment="Left" Height="20"  VerticalAlignment="Bottom"/>
                    <TextBlock Grid.Row="1"  Grid.Column="0" x:Name="Sci" VerticalAlignment="Top" FontSize="36" FontFamily="Segoe UI Black" HorizontalAlignment="Left" Foreground="#DDFFFFFF" Margin="0" Text="Computer Science"/>
                
                    <Viewbox Grid.Row="0" Grid.RowSpan="2" Grid.Column="1"  Height="150" Width="150">
                        <Image Name="KinectStreamView" Source="{Binding ImageSource}" Stretch="UniformToFill" />
                    </Viewbox>

                    <Image x:Name="image1" Height="20" Grid.Row="0" Grid.Column="2" Source="Images/uiowa.png" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,25,0"/>
                    <StackPanel x:Name="DateTimeClock" Orientation="Horizontal" Grid.Row="1" Grid.Column="2" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,0,20,0">
                        <Border Background="#333333" CornerRadius="5" Margin="5" Padding="5">
                            <TextBlock x:Name="clockText"  FontSize="22" FontFamily="Segoe UI Black" Foreground="#DDFFFFFF" VerticalAlignment="Top" ><Run Text="00:00 pm"/></TextBlock>
                        </Border>
                        <Border Background="#333333" CornerRadius="5" Margin="5" Padding="5" VerticalAlignment="Top">
                            <TextBlock x:Name="dateText" FontSize="22" FontFamily="Segoe UI Black" HorizontalAlignment="Center" Foreground="#DDFFFFFF" Margin="0"><Run Text="Mon, Jan 1" Background="#FF333333"/></TextBlock>
                        </Border>

                    </StackPanel>

                </Grid>
            </Grid>


            <ContentControl Grid.Row="1" Grid.RowSpan="2" x:Name="navigationRegion">

                <Grid x:Name="kinectRegionGrid">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.5*"/>
                        <ColumnDefinition Width="0.5*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0"
                                Grid.Column="0"
                                x:Name="weatherPanel"
                                Orientation="Horizontal" Margin="0,10,0,0">
                        <StackPanel>
                            <TextBlock Style="{StaticResource HeaderStyle}"  TextWrapping="Wrap" Text="Forecast" VerticalAlignment="Top"  Foreground="#FFFFC000"  Margin="0" HorizontalAlignment="Center"/>
                            <Image x:Name="wuLogo"  Source="Images/wundergroundLogo_4c_rev_horz.jpg" Height="25" VerticalAlignment="Top"/>
                        </StackPanel>
                        <StackPanel x:Name="weather1"  Margin="10,0" VerticalAlignment="Stretch">
                            <TextBlock x:Name="day1" TextAlignment="Center" FontSize="24" Foreground="#FFFFC000">Today</TextBlock>
                                <Image x:Name="weatherIcon1" Width="80px" Height="80px"/>
                                <TextBlock x:Name="Temp1" FontSize="24" TextAlignment="Center" Foreground="White"></TextBlock> 
                        </StackPanel>
                        <Rectangle VerticalAlignment="Stretch" Width="1" Margin="2" Stroke="White" StrokeThickness="0.5" />

                        <StackPanel x:Name="weather2"  Margin="10,0">
                                <TextBlock x:Name="day2" FontSize="24" TextAlignment="Center" Foreground="#FFFFC000"></TextBlock>
                                <Image x:Name="weatherIcon2" Width="80px" Height="80px"/>
                                <TextBlock x:Name="Temp2" FontSize="24" TextAlignment="Center" Foreground="White" ></TextBlock>
                            </StackPanel>
                        <StackPanel x:Name="weather3" Margin="10,0">
                            <TextBlock x:Name="day3" FontSize="24"  TextAlignment="Center" Foreground="#FFFFC000"></TextBlock>
                                <Image x:Name="weatherIcon3" Width="80px" Height="80px"/>
                                <TextBlock x:Name="Temp3" FontSize="24" TextAlignment="Center" Foreground="White"></TextBlock>
                            </StackPanel>
                            <StackPanel x:Name="weather4" Margin="10,0">
                            <TextBlock x:Name="day4" FontSize="24" TextAlignment="Center" Foreground="#FFFFC000"></TextBlock>
                                <Image x:Name="weatherIcon4" Width="80px" Height="80px"/>
                                <TextBlock x:Name="Temp4" FontSize="24" TextAlignment="Center" Foreground="White"></TextBlock>
                            </StackPanel>
                    </StackPanel>

                    <ScrollViewer Grid.Row="1"
                                  Grid.Column="0"
                                  x:Name="scrollViewer" 
                                  HorizontalScrollBarVisibility="Hidden"
                                  VerticalScrollBarVisibility="Disabled" 
                                  k:KinectRegion.IsScrollInertiaEnabled="true" >
                        <ItemsControl Grid.Row="0" x:Name="itemsControl" ItemTemplate="{StaticResource Kinect250x250ItemTemplate}" ButtonBase.Click="OpenPage" Margin="0,10">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel VerticalAlignment="Center" Orientation="Vertical" Margin="75,0,75,0" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                        </ItemsControl>
                    </ScrollViewer>

                    <Grid x:Name="RightGridPanel"
                          Grid.Column="1"
                          Grid.Row="0"
                          Grid.RowSpan="2"
                          Margin="10,0,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="0.675*"/>
                            <RowDefinition Height="0.325*"/>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0" >
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Style="{StaticResource HeaderStyle}" 
                                       x:Name="NewsAndAnnouncment" 
                                       TextWrapping="Wrap" 
                                       Text="Upcoming News &amp; Events" 
                                       VerticalAlignment="Top"  
                                       HorizontalAlignment="Stretch" 
                                       Foreground="#FFFFC000"/>
                            <ScrollViewer Grid.Row="1" x:Name="Slides">
                                <ScrollViewer.Style>
                                    <Style TargetType="{x:Type ScrollViewer}">
                                        <Setter Property="HorizontalScrollBarVisibility" Value="Disabled"/>
                                        <Setter Property="VerticalScrollBarVisibility" Value="Disabled"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsChecked, ElementName=chkActualSize}" Value="True">
                                                <Setter Property="HorizontalScrollBarVisibility" Value="Auto"/>
                                                <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </ScrollViewer.Style>
                                <Image x:Name="SlideImage" Source="{Binding SlideSource}" Stretch="Uniform"/>                                
                            </ScrollViewer>

                            <ScrollViewer HorizontalScrollBarVisibility="Disabled"
                                          VerticalScrollBarVisibility="Auto"
                                          x:Name="HelpSlide"
                                          Grid.Row="1">
                                <helpSlide:HelpControl></helpSlide:HelpControl>
                            </ScrollViewer>
                            <ScrollViewer HorizontalScrollBarVisibility="Disabled"
                                          VerticalScrollBarVisibility="Auto"
                                          x:Name="EventsSlide"
                                          Grid.Row="1">

                                <ListView x:Name="csEventsList" 
                                      Background="{x:Null}" 
                                      BorderBrush="{x:Null}"
                                      HorizontalAlignment="Stretch" 
                                      SelectionMode="Single"
                                       Margin="10,0,10,5"
                                      ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                      ScrollViewer.VerticalScrollBarVisibility="Auto">
                                    <ListView.ItemContainerStyle>
                                        <Style TargetType="ListViewItem">
                                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                            <Setter Property="Background" Value="Transparent" />
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="{x:Type ListViewItem}">
                                                        <ContentPresenter />
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </ListView.ItemContainerStyle>
                                    <ListView.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel HorizontalAlignment="Stretch">
                                                <TextBlock x:Name="csEventTitle" Text="{Binding csEventTitle}" FontSize="20" TextWrapping="Wrap" Foreground="White" ></TextBlock>
                                                <TextBlock x:Name="csEventTime" Text="{Binding csEventTime}" FontSize="18" FontStyle="Italic" Foreground="#FFaaaaaa"></TextBlock>
                                                <TextBlock x:Name="csEventLocation" Text="{Binding csEventLocation}" FontSize="18"  Foreground="#FFaaaaaa"></TextBlock>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>
                            </ScrollViewer>
                        </Grid>


                        <Separator Grid.Row="1" VerticalAlignment="Top" Background="White"></Separator>

                        <StackPanel Grid.Row="1" HorizontalAlignment="Stretch" Margin="0,0,0,10" >
                            <TextBlock Style="{StaticResource HeaderStyle}" x:Name="busScheduleTitle" Grid.Row="1" Foreground="#FFFFC000">Upcoming Buses</TextBlock>
                            <DataGrid x:Name="BusGrid" IsReadOnly="True"
                                      ItemsSource="{Binding}" 
                                      AutoGenerateColumns="False" 
                                      SelectionMode="Single" 
                                      SelectionUnit="Cell" Background="{x:Null}"
                                      EnableRowVirtualization="False" EnableColumnVirtualization="False">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Stop Name" Binding="{Binding stopname}" FontSize="16" />
                                    <DataGridTextColumn Header="Route Name" Binding="{Binding routename}" FontSize="16"/>
                                    <DataGridTextColumn Header="Time" Binding="{Binding minutes}" FontSize="16"/>
                                </DataGrid.Columns>
                                <DataGrid.ColumnHeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="Foreground" Value="white"/>
                                        <Setter Property="Background" Value="Transparent"/>
                                    </Style>
                                </DataGrid.ColumnHeaderStyle>
                                <DataGrid.RowStyle>
                                    <Style TargetType="DataGridRow">
                                        <Setter Property="Background" Value="{Binding color}"/>
                                    </Style>
                                </DataGrid.RowStyle>
                                <DataGrid.Resources>
                                    <Style TargetType="{x:Type DataGridRow}">
                                        <Setter Property="IsHitTestVisible" Value="False" />
                                    </Style>
                                </DataGrid.Resources>
                            </DataGrid>
                        </StackPanel>

                    </Grid>

                </Grid>
            </ContentControl>

            <StackPanel Orientation="Horizontal" Height="26" VerticalAlignment="Bottom"  Background="#FF020202"  HorizontalAlignment="Stretch" Grid.RowSpan="2" Grid.Row="1" x:Name="bottomBar">
                <StackPanel.Resources>

                    <Storyboard x:Key="sb" x:Name="sb" RepeatBehavior="Forever">
                        <DoubleAnimation Storyboard.TargetName="translate"
                                         Storyboard.TargetProperty="X"
                                         From="{Binding Source={x:Static SystemParameters.FullPrimaryScreenWidth}}"
                                         To="-6200"
                                         Duration="0:1:45"/>
                    </Storyboard>
                </StackPanel.Resources>
                <TextBlock x:Name="bottomBarText"  VerticalAlignment="Center" FontSize="20" FontFamily="Segoe UI Black" Foreground="#DDFFFFFF" xml:space="preserve">
                    <TextBlock.RenderTransform>
                        <TranslateTransform x:Name="translate" />
                    </TextBlock.RenderTransform>
                    Welcome to MacLean Hall! &#160; &#160; &#160; &#160; • &#160; &#160; &#160; &#160; 欢迎来到 MacLean Hall &#160; &#160; &#160; &#160; • &#160; &#160; &#160; &#160; ¡Bienvenido a MacLean Hall!   &#160; &#160; &#160; &#160; • &#160; &#160; &#160; &#160;  आपका स्वागत है MacLean Hall&#160; &#160; &#160; &#160; • &#160; &#160; &#160; &#160;Place your hand above your head and find the hand cursor.&#160; &#160; &#160; &#160; • &#160; &#160; &#160; &#160;Click on a menu: line the cursor on the button and push your hand forward with an open hand.&#160; &#160; &#160; &#160; • &#160; &#160; &#160; &#160;To scroll, make a fist and move your hand up or down.  Open your hand when done.&#160; &#160; &#160; &#160; • &#160; &#160; &#160; &#160;The back button is in the top left corner.&#160; &#160; &#160; &#160; • &#160; &#160; &#160; &#160;I am a touch screen too! You can touch, tap, and play.&#160; &#160; &#160; &#160; • &#160; &#160; &#160; &#160;Come check the weather, news, department events, maps, daily trivia and more!   •
                </TextBlock>

            </StackPanel>

           
                <Path Data="M0,130 C40,132.5 1194.5,129.49967 1194.5,129.49967" Height="2.495" Margin="0,0,-0.5,8.488" Stretch="Fill" Stroke="#FFFFC000" VerticalAlignment="Bottom" StrokeThickness="5"/>
        </Grid>

    </k:KinectRegion>
</Window>
